//- extends layout
html
    include ./includes/head
    block title
        title 用户登陆
    block css
        link(rel="styleSheet", href='/bower_components/flat/css/login.css')
        //- link(rel='stylesheet', href='/stylesheets/login.css') 
    body
        block content
            if message
                p.alert.alert-warning=message
            block condition
                - var loginType = "user"
            .login(style="width:940px")
                .login-screen
                    .login-icon
                        img(src="/bower_components/flat/img/login/icon.png" alt="Welcome to youyou")
                        h4 欢迎登陆
                            small 友友
                    .login-form                
                        form(method="post" action="/login/#{loginType}")
                            .control-group
                                input#login-name.login-field.input-larget(type="text" name="username" placeholder="用户名" style="")
                                label.login-field-icon.fui-man-16(for="login-name")
                            .control-group
                                input#login-pass.login-field.input-larget(type="text" name="password" placeholder="密码" style="")
                                label.login-field-icon.fui-man-16(for="login-pass")
                            a.btn.btn-primary.btn-large.btn-block(type="submit") 登陆
                        block link
                            a.login-link(href="/login/company") 旅游公司登陆
                            //- a.login-link(href="/login/tourist") 旅游局登陆 
        include ./includes/footer




