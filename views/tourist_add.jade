extends tourist
block display
	form.form-horizontal(method="post" action="/tourist/add")
		.control-group
			label.control-label(for="name") 景点名称
			.controls
				input#name.input-lg(type="text" name="name")
		.control-group
			label.control-label(for="address") 景点地址
			.controls
				input#address.input-lg(type="text" name="address")
		.control-group
			label.control-label(for="price") 景点价格
			.controls
				input#price.input-lg(type="text" name="price")
		.control-group
			label.control-label(for="time") 开放时间
			.controls
				input#time.input-lg(type="text" name="time")
		.control-group
			label.control-label(for="introduce") 景点介绍
			.controls
				input#introduce.input-lg(type="text" name="introduce")
		.form-action
			button.btn.btn-primary(type="submit") 注册							
